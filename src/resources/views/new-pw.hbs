<div class="shadow login">
    <h3 class="pb-3 text-center">reset password</h3>
    <form method="POST" action="/user/update-new-password" class="d-flex flex-column">
        {{#if message}}<p>{{message}}</p>{{/if}}
        <div class="d-flex align-items-center box-input my-2">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" id="password" placeholder="Your new password.">
        </div>
        <div class="d-flex align-items-center box-input my-2">
            <i class="fas fa-lock"></i>
            <input type="password" name="passwordcf" id="passwordcf" placeholder="Confirm password.">
        </div>
        <input type="email" name="email" id="email" value="{{email}}" hidden>
        <div class="div-btn w-100 text-center pt-3">
            <input class="rounded-pill shadow" type="submit" value="reset">
        </div>
    </form>
</div>