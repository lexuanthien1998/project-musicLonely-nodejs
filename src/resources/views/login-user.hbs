<div class="shadow login mx-3">
    <h3 class="pb-3 text-center">SignIn</h3>
    <form method="POST" action="/user/login" class="d-flex flex-column">
        <div class="d-flex align-items-center box-input my-2">
            <i class="fas fa-envelope"></i>
            <input type="email" name="email" id="email" placeholder="Your email."  required>
        </div>
        <div class="d-flex align-items-center box-input my-2">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" id="password" placeholder="Your password." required>
        </div>
        <div class="d-flex justify-content-between">
            <a href="/user/reset-password">forget password?</a>
            <a href="/user/register">signup for an account.</a>
        </div>
        <div class="div-btn w-100 text-center pt-4">
            <input class="rounded-pill shadow" type="submit" value="login">
        </div>
        {{#if message}}<p class="py-3">{{message}}</p>{{/if}}
    </form>
</div>